<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NDEV.School.XamarinGame.Views.SettingsPage"
             xmlns:NDEV="clr-namespace:NDEV.Xamarin;assembly=NDEV.Xamarin">
    <ContentPage.Content>
        <NDEV:MyGrid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="5*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <NDEV:MyLabel Text="Enter the number that need for win!" Grid.Row="0" />
            <NDEV:MyNumEntry x:Name="winNumberEntry" Grid.Row="2" />

            <NDEV:MyGrid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <NDEV:MyButton x:Name="pveButton" Text="Player VS Bot" Grid.Column="0" />
                <NDEV:MyButton x:Name="pvpButton" Text="Player VS Player" Grid.Column="1" />
            </NDEV:MyGrid>

        </NDEV:MyGrid>
    </ContentPage.Content>
</ContentPage>